@model test.ViewModel.AttendenceViewModel

<div class="card-header">
    <div class="card-title-wrap bar-success">
        <h4 class="card-title">Attendance Form</h4>
    </div>
</div>
<form method="POST" asp-controller="Attendance" asp-action="UpdateAttendance">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden type="number" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckIn" class="control-label"></label>
        <input type="time" asp-for="CheckIn" class="form-control" />
        <span asp-validation-for="CheckIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CheckOut" class="control-label"></label>
        <input type="time" asp-for="CheckOut" class="form-control" />
        <span asp-validation-for="CheckOut" class="text-danger"></span>
    </div>

    <a asp-controller="Attendance" asp-action="index" class="btn btn-danger mr-1"> <i class="icon-trash"></i> Cancel</a>

    <button type="submit" class="btn btn-warning"> <i class="icon-note"></i> Save</button>
</form>