
@model test.Models.Employee

@{
    ViewData["Title"] = "AddEmployee";
}

<div id="horizontal-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header">Add Employees Form</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title" id="horz-layout-basic">Employee Information</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form asp-action="updateEmployee" asp-controller="Employee" class="form form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-body">
                                <h4 class="form-section"><i class="icon-user"></i> Personal Details</h4>

                                <div class="form-group row">
                                    <label asp-for="Name" class="control-label"> NAME:</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Address" class="control-label">ADDRESS:</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Email" class="control-label">E-MAIL:</label>
                                    <input type="email" asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="nationality" class="control-label"></label>
                                    <input asp-for="nationality" class="form-control" />
                                    <span asp-validation-for="nationality" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="nationalID" class="control-label"></label>
                                    <input asp-for="nationalID" class="form-control" />
                                    <span asp-validation-for="nationalID" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="DateOfBirth" class="control-label"></label>
                                    <input asp-for="DateOfBirth" class="form-control" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Gender" class="control-label"></label>
                                    <input asp-for="Gender" class="form-control" />
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>


                                <h4 class="form-section"><i class="icon-book-open"></i>Other Details</h4>
                                <div class="form-group row">
                                    <label asp-for="StartWork" class="control-label"></label>
                                    <input asp-for="StartWork" class="form-control" />
                                    <span asp-validation-for="StartWork" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Salary" class="control-label"></label>
                                    <input asp-for="Salary" class="form-control" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="StartDuration" class="control-label"></label>
                                    <input type="time" asp-for="StartDuration" class="form-control" />
                                    <span asp-validation-for="StartDuration" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="EndDuration" class="control-label"></label>
                                    <input type="time" asp-for="EndDuration" class="form-control" />
                                    <span asp-validation-for="EndDuration" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="form-actions">
                                <a   asp-controller="Employee" asp-action="GetAllEmployees" class="btn btn-secondary mr-1">
                                    <i class="icon-trash"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="icon-note"></i> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

